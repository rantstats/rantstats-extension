{
    "name": "rantstats-extension",
    "version": "1.2.0",
    "description": "Add support for capturing paid Rumble Rants for Rumble.com livestreams.",
    "main": "output/pages/content/content.js",
    "scripts": {
        "build": "webpack",
        "build-watch": "yarn run build --watch",
        "build-sass": "node-sass src/ --output output --linefeed cr",
        "build-sass-watch": "yarn run build-sass --watch",
        "build-release-js": "yarn run build --mode=production",
        "build-release-sass": "yarn run build-sass --output-style compressed",
        "build-release": "yarn run build-release-js && yarn run build-release-sass"
    },
    "author": "Steven Crader",
    "license": "MIT",
    "devDependencies": {
        "@types/chrome": "^0.0.197",
        "copy-webpack-plugin": "^11.0.0",
        "http-server": "^14.1.1",
        "node-sass": "^7.0.1",
        "ts-loader": "^9.4.1",
        "ts-node": "^10.9.1",
        "typescript": "^4.8.2",
        "webpack": "^5.74.0",
        "webpack-cli": "^4.10.0"
    }
}
